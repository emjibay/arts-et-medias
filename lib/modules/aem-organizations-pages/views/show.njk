{% extends "layouts/pieceDetailsLayout.njk" %}

{%- from 'macros/hero-image.njk' import heroImage -%}
{%- from 'macros/piece-details.njk' import relatedContent, tags, websiteCTA -%}


{%- set piece = data.piece -%}

{% block title %}
  {{ piece.title }} - Organizations | Arts et MÃ©dias
{% endblock %}

{% block mainAdditionalClasses %}organization-details{% endblock %}

{% block subheading %}
  <div class="subheading">
    <h2 class="sr-only">City</h2>
    <ul class="piece-link-list">
      <li>
        {{ piece.city }}, {{ piece.country }}
      </li>
    </ul>
  </div>
{% endblock %}

{% block pageContent %}
  {{ heroImage(piece) }}

  {%- set hasHeroImage = piece.heroImage.items|length > 0 -%}
  {%- if hasHeroImage -%}
    {%- set descriptionClassList = 'description with-hero' -%}
  {%- else -%}
    {%- set descriptionClassList = 'description without-hero' -%}
  {%- endif -%}
  <h2 class="sr-only">Description</h2>
  <div class="{{ descriptionClassList }}">
    {{ apos.singleton(piece, 'description', 'apostrophe-rich-text') }}
  </div>

  {{ relatedContent(piece) }}

  {{ websiteCTA(piece) }}

  {{ tags(piece) }}
{% endblock %}

{% block sidebar %}
  {% include "partials/organizations/sidebar-en.njk" %}
{% endblock %}
