{% extends "layouts/pieceDetailsLayout.njk" %}

{%- from 'macros/hero-image.njk' import heroImage -%}
{%- from 'macros/piece-details.njk' import websiteCTA -%}
{%- from 'macros/piece-link-list.njk' import sortedPieceLinkList -%}
{%- from 'macros/tag-list.njk' import tagList -%}


{% block title %}
  {{ data.piece.title }} - Organizations | Arts et MÃ©dias
{% endblock %}

{% block mainAdditionalClasses %}organization-details{% endblock %}

{% block subheading %}
  <div class="subheading">
    <h2 class="sr-only">City</h2>
    <ul class="piece-link-list">
      <li>
        {{ data.piece.city }}, {{ data.piece.country }}
      </li>
    </ul>
  </div>
{% endblock %}

{% block pageContent %}
  {{ heroImage(data.piece) }}

  {%- set hasHeroImage = data.piece.heroImage.items|length > 0 -%}
  {%- if hasHeroImage -%}
    {%- set descriptionClassList = 'description with-hero' -%}
  {%- else -%}
    {%- set descriptionClassList = 'description without-hero' -%}
  {%- endif -%}
  <h2 class="sr-only">Description</h2>
  <div class="{{ descriptionClassList }}">
    {{ apos.singleton(data.piece, 'description', 'apostrophe-rich-text') }}
  </div>

  {%- set isCollective = data.piece.tags.indexOf('collective') > -1 -%}
  {%- set numRelatedPeople = data.piece._relatedPeople|length -%}
  {%- if isCollective and numRelatedPeople > 0 -%}
    <h2>Related People</h2>
    {{ sortedPieceLinkList(data.piece._relatedPeople) }}
  {%- endif -%}
  {{ websiteCTA(data.piece) }}

  {%- if data.piece.tags.length -%}
    <hr class="separator" />

    <h2>Tags</h2>
    {{ tagList(data.piece.tags) }}
  {%- endif -%}
{% endblock %}

{% block sidebar %}
  {% include "partials/organizations/sidebar-en.njk" %}
{% endblock %}
