{% extends "layouts/indexLayout.njk" %}

{%- from 'macros/piece-index.njk' import projectList -%}


{%- set isFirstPage = (data.currentPage === 1) -%}

{% block mainAdditionalClasses %}projects-index{% endblock %}

{% block pageContent %}
  {%- if isFirstPage -%}
    {% include "partials/projects/featured.njk" %}
    <hr class="separator" />
  {%- endif -%}

  {# pieces list #}
  {%-
    set filteredPieces = apos.aem.getPiecesWithTags(
      data.projectsByTitle,
      data.page.withTags
    )
  -%}
  {%-
    set piecesOnPage = apos.aem.getPiecesAtPage(
      filteredPieces,
      data.currentPage
    )
  -%}
  {{ projectList(piecesOnPage, true) }}

  {# pagination #}
  {{
    pager.render(
      {
        page: data.currentPage,
        total: data.totalPages
      },
      data.url
    )
  }}
{% endblock %}

{% block sidebar %}
  {%- if isFirstPage -%}
    {% include "partials/projects/sidebar-no-feature-en.njk" %}
  {%- else -%}
    {% include "partials/projects/sidebar-en.njk" %}
  {%- endif -%}
{% endblock %}
