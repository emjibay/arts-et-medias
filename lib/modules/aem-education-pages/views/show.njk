{% extends "layouts/pieceDetailsLayout.njk" %}

{%- from 'macros/hero-image.njk' import heroImage -%}
{%- from 'macros/piece-details.njk' import relatedContent, tags, websiteCTA -%}


{%- set piece = data.piece -%}

{% block title %}
  {{ piece.title }} - Education | Arts et MÃ©dias
{% endblock %}

{% block mainAdditionalClasses %}education-details{% endblock %}

{% block subheading %}
  <div class="subheading">
    {%- set institution = piece._institution[0] -%}
    <h2 class="sr-only">Institution</h2>
    <ul class="piece-link-list">
      <li>
        <a
          class="piece-link"
          href="{{ institution._url }}"
        >{{ institution.title }}</a>, {{ institution.city }}, {{ institution.country }}
      </li>
    </ul>
  </div>
{% endblock %}

{% block pageContent %}
  {{ heroImage(piece, true) }}

  <h2 class="sr-only">Description</h2>
  <p class="description">
    {{ apos.singleton(piece, 'description', 'apostrophe-rich-text') }}
  </p>

  {{ websiteCTA(piece) }}

  {{ relatedContent(piece) }}

  {{ tags(piece) }}
{% endblock %}

{% block sidebar %}
  {% include "partials/education/sidebar-en.njk" %}
{% endblock %}



