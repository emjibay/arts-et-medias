{% extends "layouts/indexLayout.njk" %}


{% block mainAdditionalClasses %}media-index{% endblock %}

{% block pageContent %}
  {# pieces list #}
  {%-
    set filteredPieces = apos.aem.getPiecesWithTags(
      data.mediaByTitle,
      data.page.withTags
    )
  -%}
  {%-
    set piecesOnPage = apos.aem.getPiecesAtPage(
      filteredPieces,
      data.currentPage
    )
  -%}
  {{ pieceList(piecesOnPage) }}

  {# pagination #}
  {{
    pager.render(
      {
        page: data.currentPage,
        total: data.totalPages
      },
      data.url
    )
  }}
{% endblock %}

{% block sidebar %}
  {% include "partials/media/sidebar-en.njk" %}
{% endblock %}
