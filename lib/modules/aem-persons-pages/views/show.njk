{% extends "layouts/layout.njk" %}

{%-
  from 'macros/tag-list.njk'
  import tagList
-%}

{% block title %}
  {{ data.page.title }} | Arts et MÃ©dias
{% endblock %}

{% block beforeMain %}
  {% include "partials/header.html" %}
{% endblock %}

{% block main %}
  <div class="page-person-details">
    <main id="main" class="content">
      <div class="column left">
        <h1>{{data.piece.title}}</h1>
        <p class="description">
          {{ apos.singleton(data.piece, 'description', 'apostrophe-rich-text') }}
        </p>
        {{ tagList(data.piece.tags) }}
        <a
          class="website-cta"
          href="{{data.piece.website}}"
          target="_blank"
          rel="noopener noreferrer"
        >View website</a>
      </div>

      <div class="column right">
        {# image start #}
        {%- set aposImageData = apos.images.first(data.piece.profilePic) -%}
        {%- set image = apos.aem.getImageBasicData(aposImageData) -%}
        <img
          class="profile-pic"
          src="{{ image.url }}"
          alt="{{ image.alt }}"
        />
        {# image end #}
      </div>
    </main>
  </div>
{% endblock %}

{% block afterMain %}
  {% include "partials/footer.html" %}
{% endblock %}
