{% extends "layouts/pieceDetailsLayout.njk" %}

{% from 'macros/piece-details.njk' import websiteCTA %}
{% from 'macros/tag-list.njk' import tagList %}

{% block title %}
  {{ data.piece.title }} - People | Arts et MÃ©dias
{% endblock %}

{% block pageContent %}
  <h2 class="sr-only">Description</h2>
  <p class="description">
    {{ apos.singleton(data.piece, 'description', 'apostrophe-rich-text') }}
  </p>

  <h2>Tags</h2>
  {{ tagList(data.piece.tags) }}

  {{ websiteCTA(data.piece) }}
{% endblock %}

{% block sidebar %}
  <aside class="sidebar">
    {# image start #}
    {%- set aposImageData = apos.images.first(data.piece.profilePic) -%}
    {%- if aposImageData -%}
      {%- set image = apos.aem.getImageBasicData(aposImageData) -%}
      <img
        class="profile-pic"
        src="{{ image.url }}"
        alt="{{ image.alt }}"
      />
    {%- endif -%}
    {# image end #}
    {% include "partials/sidebar/help-cta.njk" %}
  </aside>
{% endblock %}
