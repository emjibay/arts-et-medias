{% extends "layouts/indexLayout.njk" %}


{%- from 'macros/banner-ad.njk' import inContextLeaderboard -%}
{%- from 'macros/cta.njk' import seeAllCTA -%}
{%- from 'macros/piece-index.njk' import recentlyAddedOrgs -%}


{%- set locale = apos.aemI18n.getSanitizedLocale(data) -%}
{%- set leaderboardOptions = { data: data, propName: 'orgsLeaderboard' } -%}
{%- set areLeaderboardsVisible = apos.aemBannerAds.areVisible(leaderboardOptions) -%}


{% macro orgList(category) %}
  {%- set cat = 'organizations|categories|' + category + '|' -%}

  {{
    recentlyAddedOrgs(
      __(cat + 'recentlyAdded'),
      data.organizationsByMostRecent,
      __(cat + 'tags'),
      locale
    )
  }}

  {{ seeAllCTA(__(cat + 'seeAllCTA'), __(cat + 'url')) }}
{% endmacro %}


{% block title %}
  {{ apos.aemSeo.buildSimplePageTitle(__, data.page.title) }}
{% endblock %}

{% block mainAdditionalClasses %}organization-index{% endblock %}

{% block advertisementBeforeMain %}
  {%- if areLeaderboardsVisible -%}
    {{ inContextLeaderboard(leaderboardOptions, { location: 'before' }) }}
  {%- endif -%}
{% endblock %}

{% block pageContent %}
  {{ orgList('galleries') }}

  {{ orgList('artCenters') }}

  {{ orgList('mediaLabs') }}

  {{ orgList('makerSpaces') }}
{% endblock %}

{% block sidebar %}
  {% include "partials/organizations/sidebar.njk" %}
{% endblock %}
