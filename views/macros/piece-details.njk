{%- macro truncatedDescription(piece) -%}
  {%- if piece.description.items -%}
    {%- set descriptionText = piece.description.items[0].content | safe -%}
  {%- else -%}
    {%- set descriptionText = piece.description -%}
  {%- endif -%}
  <p>{{ descriptionText | truncate(140, true, "...") }}</p>
{%- endmacro -%}

{%- macro websiteCTA(piece) -%}
  {%- if piece.website -%}
    <a
      class="website-cta"
      href="{{ piece.website }}"
      target="_blank"
      rel="noopener noreferrer"
    >View website</a>
  {%- endif -%}
{%- endmacro -%}
