{%- macro pieceLinkList(pieces) -%}
  <ul class="piece-link-list">
    {% for piece in pieces %}
      <li><a
          class="piece-link"
          href="{{ piece._url }}"
        >{{ piece.title }}</a></li>
    {% endfor %}
  </ul>
{%- endmacro -%}

{%- macro sortedPieceLinkList(pieces) -%}
  {{ pieceLinkList(apos.aem.sortByTitle(pieces)) }}
{%- endmacro -%}

