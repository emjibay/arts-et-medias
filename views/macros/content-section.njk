{%- from 'options/options.njk' import movableRichTextOptions -%}


{%-
  set defaultAreaOptions = {
    widgets: {
      'aem-anchor-heading': {},
      'apostrophe-rich-text': movableRichTextOptions|merge({
        addLabel: 'Text'
      }),
      'apostrophe-images': {
        addLabel: 'Image',
        limit: 1
      },
      'aem-video': {},
      'aem-tweet': {},
      'aem-link': {},
      'aem-source': {}
    },
    contextual: true
  }
-%}

{%-
  macro contentSection(
    dataContainer,
    propName = 'bodyContent',
    useSchema = false,
    areaOptions = defaultAreaOptions
  )
-%}
  <section>
    <div class="rich-content">
      {% if useSchema %}
        {{ apos.area(dataContainer, propName) }}
      {% else %}
        {{ apos.area(dataContainer, propName, areaOptions) }}
      {% endif %}
    </div>
  </section>
{%- endmacro -%}
