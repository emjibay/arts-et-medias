{#
  options = {
    id,
    label,
    type,
  }
 #}
{%- macro searchInput(options) -%}
  <form
    class="search-form"
    method="GET"
    action="/search"
  >
    <fieldset class="search-fieldset">
      <legend class="ld-meta">
        {{ __ns('apostrophe', 'New Search') }}
      </legend>
      <label
        for="{{ options.id }}"
      >{{ options.label }}</label>
      <input
        id="{{ options.id }}"
        class="search-input"
        type="search"
        name="q"
        placeholder="Enter your search"
      />
      {%- if options.type -%}
        <input
          type="hidden"
          name="type"
          value="{{ options.type }}"
        />
      {%- endif -%}
      <button
        type="submit"
        class="search-button"
      >
        <img
          class="icon"
          src="/img/icon-search.svg"
          alt=""
        />
        <span class="label">Search</span>
      </button>
    </fieldset>
  </form>
{%- endmacro -%}

