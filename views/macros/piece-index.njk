{# recently added #}
{% macro recentlyAdded(label, pieces, tags = []) %}
  <div class="recently-added-pieces">
    <h2 class="content-type-heading">{{ label }}</h2>
    {%-
      set filtered = apos.aemPieces.getWithTags(pieces, tags)
    -%}

    {%- if filtered[1] -%}
      {%-
        set recentlyAdded = [
          filtered[0],
          filtered[1]
        ]
      -%}
    {%- else -%}
      {%- set recentlyAdded = [filtered[0]] -%}
    {%- endif -%}

    {{ pieceList(recentlyAdded) }}
  </div>
{% endmacro %}

